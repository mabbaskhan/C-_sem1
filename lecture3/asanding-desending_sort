#include<iostream>
using namespace std;


int main() {
int a, b, c, d, e;
int sum;
cout<<"Enter five integers: ";
cout<<endl;
cin>>a>>b>>c>>d>>e;
sum = a + b + c + d + e;
cout<<"The sum of the numbers = ";
cout<<endl;
cout<<sum;
cout<<endl;
cout<<"The numbers in asending order are: \n ";
cout<<a<<" "<<b<<" "<<c<<" "<<d<<" "<<e;
cout<<endl;
cout<<"The number in desending order: \n";
cout<<e<<" "<<d<<" "<<c<<" "<<b<<" "<<a;
cout<<endl;
return 0;
}